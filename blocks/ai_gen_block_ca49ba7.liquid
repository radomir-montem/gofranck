{% doc %}
  @prompt
    product carousel
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-carousel-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-product-carousel__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-product-carousel__header-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
  }

  .ai-product-carousel__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0;
  }

  .ai-product-carousel__controls-{{ ai_gen_id }} {
    display: flex;
    gap: 10px;
  }

  .ai-product-carousel__button-{{ ai_gen_id }} {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: {{ block.settings.button_background }};
    border: 1px solid {{ block.settings.button_border }};
    color: {{ block.settings.button_color }};
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .ai-product-carousel__button-{{ ai_gen_id }}:hover:not(:disabled) {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_color }};
  }

  .ai-product-carousel__button-{{ ai_gen_id }}:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .ai-product-carousel__track-wrapper-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
  }

  .ai-product-carousel__track-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.gap }}px;
    transition: transform 0.5s ease;
    scroll-behavior: smooth;
  }

  .ai-product-carousel__item-{{ ai_gen_id }} {
    flex: 0 0 calc((100% - ({{ block.settings.products_per_row }} - 1) * {{ block.settings.gap }}px) / {{ block.settings.products_per_row }});
    min-width: 0;
  }

  .ai-product-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .ai-product-card__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-product-card__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-product-card__placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-product-card__placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-product-card__info-{{ ai_gen_id }} {
    padding: 15px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .ai-product-card__vendor-{{ ai_gen_id }} {
    font-size: 12px;
    color: {{ block.settings.text_color }};
    opacity: 0.7;
    margin-bottom: 5px;
    text-transform: uppercase;
  }

  .ai-product-card__title-{{ ai_gen_id }} {
    font-size: 16px;
    color: {{ block.settings.text_color }};
    margin: 0 0 10px;
    line-height: 1.4;
  }

  .ai-product-card__title-link-{{ ai_gen_id }} {
    color: inherit;
    text-decoration: none;
  }

  .ai-product-card__title-link-{{ ai_gen_id }}:hover {
    opacity: 0.8;
  }

  .ai-product-card__price-{{ ai_gen_id }} {
    font-size: 16px;
    font-weight: 600;
    color: {{ block.settings.price_color }};
    margin-top: auto;
  }

  .ai-product-card__price--sale-{{ ai_gen_id }} {
    color: {{ block.settings.sale_price_color }};
  }

  .ai-product-card__compare-price-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.text_color }};
    opacity: 0.6;
    text-decoration: line-through;
    margin-right: 8px;
  }

  .ai-product-carousel__empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: {{ block.settings.text_color }};
    opacity: 0.6;
  }

  @media screen and (max-width: 989px) {
    .ai-product-carousel__item-{{ ai_gen_id }} {
      flex: 0 0 calc((100% - ({{ block.settings.products_per_row_tablet }} - 1) * {{ block.settings.gap }}px) / {{ block.settings.products_per_row_tablet }});
    }
  }

  @media screen and (max-width: 749px) {
    .ai-product-carousel__header-{{ ai_gen_id }} {
      flex-direction: column;
      align-items: flex-start;
      gap: 15px;
    }

    .ai-product-carousel__item-{{ ai_gen_id }} {
      flex: 0 0 calc((100% - {{ block.settings.gap }}px) / 2);
    }

    .ai-product-carousel__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<product-carousel-{{ ai_gen_id }}
  class="ai-product-carousel-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-product-carousel__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <div class="ai-product-carousel__header-{{ ai_gen_id }}">
        <h2 class="ai-product-carousel__title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        <div class="ai-product-carousel__controls-{{ ai_gen_id }}">
          <button
            class="ai-product-carousel__button-{{ ai_gen_id }} ai-product-carousel__prev-{{ ai_gen_id }}"
            aria-label="Previous products"
          >
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M12.5 15L7.5 10L12.5 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
          <button
            class="ai-product-carousel__button-{{ ai_gen_id }} ai-product-carousel__next-{{ ai_gen_id }}"
            aria-label="Next products"
          >
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M7.5 15L12.5 10L7.5 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
        </div>
      </div>
    {% endif %}

    {% if block.settings.collection != blank %}
      <div class="ai-product-carousel__track-wrapper-{{ ai_gen_id }}">
        <div class="ai-product-carousel__track-{{ ai_gen_id }}">
          {% for product in block.settings.collection.products limit: block.settings.products_limit %}
            <div class="ai-product-carousel__item-{{ ai_gen_id }}">
              <div class="ai-product-card-{{ ai_gen_id }}">
                <div class="ai-product-card__image-wrapper-{{ ai_gen_id }}">
                  {% if product.featured_image %}
                    <img
                      src="{{ product.featured_image | image_url: width: 600 }}"
                      alt="{{ product.featured_image.alt | escape }}"
                      loading="lazy"
                      width="600"
                      height="600"
                      class="ai-product-card__image-{{ ai_gen_id }}"
                    >
                  {% else %}
                    <div class="ai-product-card__placeholder-{{ ai_gen_id }}">
                      {{ 'product-1' | placeholder_svg_tag }}
                    </div>
                  {% endif %}
                </div>
                <div class="ai-product-card__info-{{ ai_gen_id }}">
                  {% if block.settings.show_vendor and product.vendor != blank %}
                    <div class="ai-product-card__vendor-{{ ai_gen_id }}">{{ product.vendor }}</div>
                  {% endif %}
                  <h3 class="ai-product-card__title-{{ ai_gen_id }}">
                    <a href="{{ product.url }}" class="ai-product-card__title-link-{{ ai_gen_id }}">
                      {{ product.title }}
                    </a>
                  </h3>
                  {% if block.settings.show_price %}
                    <div class="ai-product-card__price-{{ ai_gen_id }} {% if product.compare_at_price > product.price %}ai-product-card__price--sale-{{ ai_gen_id }}{% endif %}">
                      {% if product.compare_at_price > product.price %}
                        <span class="ai-product-card__compare-price-{{ ai_gen_id }}">{{ product.compare_at_price | money }}</span>
                      {% endif %}
                      {{ product.price | money }}
                    </div>
                  {% endif %}
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    {% else %}
      <div class="ai-product-carousel__empty-{{ ai_gen_id }}">
        Select a collection to display products
      </div>
    {% endif %}
  </div>
</product-carousel-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentIndex = 0;
        this.itemsPerView = {{ block.settings.products_per_row }};
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-product-carousel__track-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-product-carousel__prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-product-carousel__next-{{ ai_gen_id }}');
        this.items = this.querySelectorAll('.ai-product-carousel__item-{{ ai_gen_id }}');

        if (!this.track || this.items.length === 0) return;

        this.updateItemsPerView();
        this.setupEventListeners();
        this.updateButtons();

        window.addEventListener('resize', () => {
          this.updateItemsPerView();
          this.updateButtons();
        });
      }

      updateItemsPerView() {
        const width = window.innerWidth;
        if (width <= 749) {
          this.itemsPerView = 2;
        } else if (width <= 989) {
          this.itemsPerView = {{ block.settings.products_per_row_tablet }};
        } else {
          this.itemsPerView = {{ block.settings.products_per_row }};
        }
      }

      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.prev());
        }
        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.next());
        }
      }

      prev() {
        if (this.currentIndex > 0) {
          this.currentIndex--;
          this.updateCarousel();
        }
      }

      next() {
        const maxIndex = Math.max(0, this.items.length - this.itemsPerView);
        if (this.currentIndex < maxIndex) {
          this.currentIndex++;
          this.updateCarousel();
        }
      }

      updateCarousel() {
        const item = this.items[0];
        const itemWidth = item.offsetWidth;
        const gap = {{ block.settings.gap }};
        const offset = -(this.currentIndex * (itemWidth + gap));
        
        this.track.style.transform = `translateX(${offset}px)`;
        this.updateButtons();
      }

      updateButtons() {
        const maxIndex = Math.max(0, this.items.length - this.itemsPerView);
        
        if (this.prevButton) {
          this.prevButton.disabled = this.currentIndex === 0;
        }
        if (this.nextButton) {
          this.nextButton.disabled = this.currentIndex >= maxIndex;
        }
      }
    }

    customElements.define('product-carousel-{{ ai_gen_id }}', ProductCarousel{{ ai_gen_id }});
  })();
</script>

