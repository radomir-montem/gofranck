</div>
<script>
    {% if section.blocks.size > 1 %}
        const swiper = new Swiper('.hero-slideshow', {
            loop: true,
        
            // If we need pagination
            pagination: {
                el: '.swiper-pagination',
            },
        
            {% if section.settings.enable_arrow %}
                // Navigation arrows
                navigation: {
                    nextEl: '.swiper-button-next',
                    prevEl: '.swiper-button-prev',
                },
            {% endif %}

            {% if section.settings.autoplay %}
                autoplay: {
                    delay: {{ section.settings.autoplay_speed | times: 1000 }}
                }
            {% endif %}
        });
    {% endif %}
</script>
  
  {% schema %}
  {
    "name": "Hero Slideshow",
    "tag": "section",
    "class": "section",
    "settings": [
        {
            "type": "checkbox",
            "id": "autoplay",
            "label": "Enable Autoplay",
            "default": false
        },
        {
            "type": "range",
            "id": "autoplay_speed",
            "label": "Autoplay speed",
            "default": 3,
            "min": 2,
            "max": 10,
            "step": 1,
            "unit": "S"
        },
        {
            "type": "checkbox",
            "id": "enable_arrow",
            "label": "Enable Arrow",
            "default": false
        }
    ],
    "blocks": [
        {
            "type": "slide",
            "name": "Slide",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Pick your main image"
                },
                {
                    "type": "image_picker",
                    "id": "mobile_image",
                    "label": "Pick your mobile main image"
                },
                {
                    "type": "text",
                    "id": "text1",
                    "label": "First Title",
                    "default": "AW"
                },
                {
                    "type": "text",
                    "id": "text2",
                    "label": "Second Title",
                    "default": "24"
                },
                {
                    "type": "textarea",
                    "id": "subtitle",
                    "label": "Subtitle",
                    "default": "Sale is live"
                },
                {
                    "type": "text",
                    "id": "button_1_text",
                    "label": "Second button text",
                    "default": "Button 1"
                },
                {
                    "type": "url",
                    "id": "url_1",
                    "label": "Second Hero url"
                },
                {
                    "type": "text",
                    "id": "button_2_text",
                    "label": "Second button text",
                    "default": "Button 2"
                },
                {
                    "type": "url",
                    "id": "url_2",
                    "label": "Second hero url"
                }
            ]
        }
    ],
    "presets": [
      {
        "name": "Hero Slideshow"
      }
    ]
  }
  {% endschema %}
  