{% schema %}
{
  "name": "go-hero",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Pick your main image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Pick your mobile main image"
    },
    {
      "type": "text",
      "id": "text1",
      "label": "First Title",
      "default": "AW"
    },
    {
      "type": "text",
      "id": "text2",
      "label": "Second Title",
      "default": "24"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Sale is live"
    },
    {
      "type": "text",
      "id": "button_1_text",
      "label": "Second button text",
      "default": "Button 1"
    },
    {
      "type": "url",
      "id": "url_1",
      "label": "Second Hero url"
    },
    {
      "type": "text",
      "id": "button_2_text",
      "label": "Second button text",
      "default": "Button 2"
    },
    {
      "type": "url",
      "id": "url_2",
      "label": "Second hero url"
    }
  ],
  "presets": [
    {
      "name": "go hero banner"
    }
  ]
}
{% endschema %}
