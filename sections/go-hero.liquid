{% comment %}
  {{ "go-wf.css" | asset_url | stylesheet_tag }}
  <script src="{{ "go-jquery.js" | asset_url }}" defer></script>
  <script src="{{ "go-wf.js" | asset_url }}" defer></script>
{% endcomment %}
<div class="go-section-hero">
  {%- if section.settings.image != blank -%}
    {% assign hero_image_class = 'go-hero-background-image' %}
    {% if section.settings.mobile_image != blank %}
      {% assign hero_image_class = 'go-hero-background-image small-hide' %}
    {% endif %}
    {{
      section.settings.image
      | image_url: width: 1500
      | image_tag:
        loading: 'lazy',
        width: section.settings.image.width,
        class: hero_image_class,
        sizes: '100vw',
        widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
        alt: section.settings.image.alt
      | escape
    }}
    {% if section.settings.mobile_image != blank %}
      {{
        section.settings.mobile_image
        | image_url: width: 750
        | image_tag:
          loading: 'lazy',
          width: section.settings.mobile_image.width,
          class: 'go-hero-background-image medium-hide large-up-hide',
          sizes: '100vw',
          widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
          alt: section.settings.mobile_image.alt
        | escape
      }}
    {% endif %}
  {%- else -%}
    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
  {%- endif -%}
  <div class="go-section-hero-overlay"></div>
  <div class="go-hero-container">
    <div class="go-hero-text-wrapper">
      <div
        data-w-id="e42844d3-1683-f46d-5c55-b84054fef0b1"
        style="transform: translate3d(0px, 0px, 0px) scale3d(1, 1, 1) rotateX(0deg) rotateY(0deg) rotateZ(0deg) skew(0deg, 0deg); opacity: 1; transform-style: preserve-3d;"
        class="go-hero-div-height-title"
      >
        {% if section.settings.text1 != blank %}
          <h1 class="go-hero-heading">{{ section.settings.text1 }}</h1>
        {% endif %}
        {% if section.settings.text2 != blank %}
          <div class="main-title-diamond-icon"></div>
          <h1 class="go-hero-heading">{{ section.settings.text2 }}</h1>
        {% endif %}
        {% if section.settings.subtitle != blank %}
          <h1 class="go-hero-heading go-hero-subtitle">{{ section.settings.subtitle }}</h1>
        {% endif %}
      </div>
      <div class="go-hero-div-height">
        <div
          data-w-id="d1254ee2-6d56-a320-bdae-3d3502bcaf80"
          style="transform: translate3d(0px, 0px, 0px) scale3d(1, 1, 1) rotateX(0deg) rotateY(0deg) rotateZ(0deg) skew(0deg, 0deg); transform-style: preserve-3d;"
          class="go-hero-buttons-wrapper"
        >
          <a
            {% if section.settings.url_1 == blank %}
              style="opacity: 0.5;"
            {% else %}
              href="{{ section.settings.url_1 }}"
            {% endif %}
            class="go-hero-button w-inline-block"
          >
            <div class="go-hero-button-text">{{ section.settings.button_1_text }}</div>
            <div class="hero-diamond-icon" style="background-color: rgba(255, 255, 255, 0);"></div></a
